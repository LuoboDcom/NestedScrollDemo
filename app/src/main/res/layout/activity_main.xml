<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ys.yoosir.nestedscrolldemo.MainActivity">

    <Button
        android:id="@+id/btn_scrolling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scrolling_activity"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btn_first_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_custom"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btn_imitate_uc_fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uc_fold"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/avatar_text"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_activity"
        android:onClick="onClick"
        />

</LinearLayout>
